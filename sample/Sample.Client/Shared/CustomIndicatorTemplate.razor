@inherits IndicatorTemplateBase

<div class="blazor-loadingindicator-loader-wrapper">
    <div class="spinner"></div>
    <p style="margin: 0;">
        <span style="font-size: 1.5em">@(CurrentTask?.Maintext ?? "Loading ...")</span>
        <br />
        @if (CurrentTask?.ProgressMax != null)
        {
            <progress value="@CurrentTask?.ProgressValue" max="@CurrentTask?.ProgressMax" />
        }
        else
        {
            <span style="font-size: 1.2em">@(CurrentTask?.Subtext ?? string.Empty)</span>
        }
    </p>
</div>
